<%= render './navbar' %>


<div class="container">
  <div class="head">
    <h1><%= @title %></h1>
  </div>
  <% @restaurants.each do |r| %>
  <div class="card container my-3 p-3">
    <p><%= link_to r.name, restaurant_path(r) %><br>
    <%= r.category %>
    </p>
    <p><i class="fas fa-map-marker-alt"></i> <%= r.address %><br>
    <i class="fas fa-phone"></i> <%= r.phone_number %> </p>
    </div>
  <% end %>
</div>