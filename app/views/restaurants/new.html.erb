<h1>Restaurants#new</h1>
<div class="container">
    <%= simple_form_for [@restaurant] do |f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category, as: :select, collection: Restaurant::CATEGORY %>
        <%= f.submit "add a restaurant", class: "btn btn-primary" %>
    <% end %>
</div>
